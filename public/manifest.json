{
  "manifest_version": 3,
  "name": "browser-make-nodes",
  "description": "Make nodes for browser page",
  "version": "1.0",
  "developer": {
    "name": "Mengyu Han",
    "url": "https://github.com/HfRainstorm/browser-make-nodes",
    "email": "hmy_hammer@163.com"
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "storage",
    "background",
    "tabCapture",
    "scripting",
    "notifications"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "js/background.js"
  },

  "action": {
    "default_icon": "icons/logo.png",
    "default_title": "Make Nodes Setting Panel",
    "default_popup": "html/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScripts.js"],
      "css": ["css/contentScripts.css"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["images/*", "js/common.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "minimum_chrome_version": "5"
}
